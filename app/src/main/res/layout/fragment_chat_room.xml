<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp"
        >


        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="@string/edit_contact_name"
            android:textSize="20sp"
            android:layout_toRightOf="@+id/cardview_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/edit_user_name">
        </TextView>


        <ImageView
            android:id="@+id/button_chat_settings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="17dp"
            android:clickable="true"
            android:src="@drawable/ic_baseline_info_24"
            android:tooltipText="@string/edit_search_friend"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="-5dp"
            android:layout_below="@+id/cardview_image"
            android:id="@+id/edit_breakline"

            android:layout_toRightOf="@+id/cardview_image"
            android:text="----------------------------------------------------------------------"

            android:textColor="#CDC7C7"
            >
        </TextView>

    </RelativeLayout>





</RelativeLayout>