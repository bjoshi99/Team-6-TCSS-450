<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="95dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/picture_cat1"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cat1"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/edit_user_name"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/cardview_image"
            android:text="@string/edit_contact_name"
            android:textSize="20sp"></TextView>


        <TextView
            android:id="@+id/edit_current_chat"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_below="@+id/edit_user_name"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cardview_image"
            android:text="What's up man"
            android:textColor="@color/material_on_background_disabled"
            android:textSize="15sp">

        </TextView>

        <ImageButton
            android:src="@drawable/ic_add_black_24dp"
            android:id="@+id/button_add"
            android:layout_marginTop="20dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/edit_current_chat"
            />

        <ImageButton
            android:id="@+id/button_send"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_send_black_24dp"
            android:layout_toRightOf="@id/button_add"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="15dp"/>



    </RelativeLayout>


</RelativeLayout>